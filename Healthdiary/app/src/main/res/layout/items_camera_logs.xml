<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/marginForItemNews"
    android:background="@color/colorForLogTitle"
    android:padding="@dimen/paddingForTextViews">

    <TextView
        android:id="@+id/tvCameraLogDate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/textViewHeight"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/topMarginForLogTextViews"
        android:text="Date: "
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/ivCameraLogImage"
        android:layout_width="@dimen/pictureWidth"
        android:layout_height="@dimen/pictureHeight"
        android:src="@mipmap/ic_launcher"

        />

</LinearLayout>