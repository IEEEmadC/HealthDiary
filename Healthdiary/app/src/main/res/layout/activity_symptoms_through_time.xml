<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hr.ferit.mdudjak.healthdiary.BodyStatistics">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bPieCharts"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorForLogInput"
            android:text="@string/buttonDescriptionPerAreaText"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bLineCharts"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorForLogInput"
            android:text="@string/buttonSymptomIntensityPerDateText"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:id="@+id/lvSymptomStatistics"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/padding"
        android:layout_height="wrap_content"></ListView>
</LinearLayout>
