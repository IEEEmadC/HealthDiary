<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.ferit.mdudjak.healthdiary.AddSymptomInfo">

    <LinearLayout
        android:id="@+id/lLDescriptionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_margin="@dimen/marginForSearchArea"
        android:background="@color/colorForLogTitle"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etSearchDescription"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="64dp"
            android:inputType="text"
            android:layout_gravity="center"
            android:hint="@string/hintForDescriptionSearch"/>
        <ImageButton
            android:id="@+id/ibSearchDescription"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_button"/>
    </LinearLayout>

    <ListView
        android:id="@+id/descriptionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lLDescriptionInput"
        android:layout_above="@+id/rlAddDescription"
        android:layout_alignLeft="@+id/lLDescriptionInput"
        android:layout_alignStart="@+id/lLDescriptionInput">
    </ListView>
    <RelativeLayout
        android:id="@+id/rlAddDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/marginForSearchArea"
        android:background="@color/colorForLogInput">
        <TextView
            android:id="@+id/txtTitleForDescriptionMissing"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/marginForSearchArea"
            android:text="@string/txtTitleForDescriptionMissing"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/lLDescriptionLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_below="@id/txtTitleForDescriptionMissing"
            android:layout_margin="@dimen/marginForSearchArea"
            android:background="@color/colorForLogTitle"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etAddDescription"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="64dp"
                android:inputType="text"
                android:layout_gravity="center"
                android:hint="@string/hintForDescriptionInput"/>
            <ImageButton
                android:id="@+id/ibAddDescription"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_button_add"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
